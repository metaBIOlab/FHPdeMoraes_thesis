#### DESVIO INTERHEMISFERICO, COMPRIMENTO AXONAL MEDIO PONDERADO  e FRACAO CALOSA####

dados <-
  dados %>% mutate(
    left_minus_right = logkteorico.L - logkteorico.R,
    interhemispheric_deviation = abs((logkteorico.L - logkteorico.R) / (
      var(logkteorico.L, na.rm = TRUE) + var(logkteorico.R, na.rm = TRUE) - 2 *
        cov(logkteorico.L, logkteorico.R, use = "complete")
    ) ^ (1 / 2)) ,
    l = WM_volume_CC / TotalArea_corrected_CC,
    fC = WhiteSurfArea / TotalArea_corrected_CC,
    left_minus_right_agedecay = logkteorico_age_decay.L - logkteorico_age_decay.R,
    interhemispheric_deviation_agedecay = abs((logkteorico_age_decay.L - logkteorico_age_decay.R) / (
      var(logkteorico_age_decay.L, na.rm = TRUE) + var(logkteorico_age_decay.R, na.rm = TRUE) - 2 *
        cov(logkteorico_age_decay.L, logkteorico_age_decay.R, use = "complete")
    ) ^ (1 / 2)) ,
      l_agedecay = WM_volume_CC_age_decay / TotalArea_age_decay_CC,
    fC_agedecay = logWhiteSurfArea_age_decay / logTotalArea_age_decay_CC,
    l_eTIV = (WM_volume_CC/eTIV) / (TotalArea_corrected_CC/(eTIV^(2/3))),
    fC_eTIV = (WhiteSurfArea/(eTIV^(2/3))) / (TotalArea_corrected_CC/(eTIV^(2/3)))
  )
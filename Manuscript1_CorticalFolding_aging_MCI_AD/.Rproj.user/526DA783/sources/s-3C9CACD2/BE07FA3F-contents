# AVERAGE THICKNESS - com correcao longitudinal ----

decay_AvgThickness_longcor <- filter(dados, Session == "1" , Longitudinal_correction == "yes") %>%
  group_by(Diagnostic, ROI) %>%
  do(fit_decay_AvgThickness_longcor = rlm(logAvgThickness ~ Age, data = .))

# get the coefficients por intervalo de idade ----
decay_AvgThickness_Coef_longcor = tidy(
  decay_AvgThickness_longcor,
  fit_decay_AvgThickness_longcor,
  conf.int = TRUE,
  conf.level = 0.95
)

lambda_t_CTL_hemi_longcor <-
  decay_AvgThickness_Coef_longcor$estimate[decay_AvgThickness_Coef_longcor$Diagnostic == "CONTROLE" &
                                             decay_AvgThickness_Coef_longcor$term == "Age" &
                                             decay_AvgThickness_Coef_longcor$ROI == "hemisphere"]

b_t_CTL_hemi_longcor <-
  decay_AvgThickness_Coef_longcor$estimate[decay_AvgThickness_Coef_longcor$Diagnostic == "CONTROLE" &
                                             decay_AvgThickness_Coef_longcor$term == "(Intercept)" &
                                             decay_AvgThickness_Coef_longcor$ROI == "hemisphere"]


lambda_t_CTL_F_longcor <-
  decay_AvgThickness_Coef_longcor$estimate[decay_AvgThickness_Coef_longcor$Diagnostic == "CONTROLE" &
                                             decay_AvgThickness_Coef_longcor$term == "Age" &
                                             decay_AvgThickness_Coef_longcor$ROI == "F"]

b_t_CTL_F_longcor <-
  decay_AvgThickness_Coef_longcor$estimate[decay_AvgThickness_Coef_longcor$Diagnostic == "CONTROLE" &
                                             decay_AvgThickness_Coef_longcor$term == "(Intercept)" &
                                             decay_AvgThickness_Coef_longcor$ROI == "F"]



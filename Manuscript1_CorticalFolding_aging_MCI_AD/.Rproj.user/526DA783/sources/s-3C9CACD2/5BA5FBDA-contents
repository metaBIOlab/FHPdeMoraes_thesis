# taxa de caimento da girificacao (espessura)----

decay_localGI <- dados  %>%
  group_by(Diagnostic, ROI) %>%
  do(fit_decay_localGI = lm(localGI ~ Age, data = .))

# get the coefficients por intervalo de idade ----
decay_localGI_Coef = tidy(decay_localGI,
                          fit_decay_localGI,
                          conf.int = TRUE,
                          conf.level = 0.95)

# lambda, b e Ko CTL ----

lambda_lGI_CTL_hemi <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "hemisphere"]

b_lGI_CTL_hemi <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "hemisphere"]

lambda_lGI_CTL_F <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "F"]

b_lGI_CTL_F <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "F"]

lambda_lGI_CTL_O <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "O"]

b_lGI_CTL_O <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "O"]

lambda_lGI_CTL_P <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "P"]

b_lGI_CTL_P <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "P"]

lambda_lGI_CTL_T <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "T"]

b_lGI_CTL_T <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "T"]

lambda_lGI_CTL_CC <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "Age" &
                                decay_localGI_Coef$ROI == "CC"]

b_lGI_CTL_CC <-
  decay_localGI_Coef$estimate[decay_localGI_Coef$Diagnostic == "CONTROLE" &
                                decay_localGI_Coef$term == "(Intercept)" &
                                decay_localGI_Coef$ROI == "CC"]

# COM CORRECAO LONGITUDINAL

decay_localGI_longcor <- dados  %>%
  group_by(Diagnostic, ROI) %>%
  do(fit_decay_localGI_longcor = lm(localGI ~ Age, data = .))

# get the coefficients por intervalo de idade ----
decay_localGI_Coef = tidy(
  decay_localGI_longcor,
  fit_decay_localGI_longcor,
  conf.int = TRUE,
  conf.level = 0.95
)

# lambda, b e Ko CTL ----

lambda_lGI_CTL_hemi_longcor <-
  decay_localGI_Coef_longcor$estimate[decay_localGI_Coef_longcor$Diagnostic == "CONTROLE" &
